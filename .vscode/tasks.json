{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}",
                "&&",
                "sleep",
                "1s",
                "&&",
                "./${fileBasenameNoExtension}",
                "&&",
                "sleep",
                "1s",
                "&&",
                "rm",
                "${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Task to compile and run the active C++ file"
        }
    ]
}
